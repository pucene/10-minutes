{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Pucene</h1>
            <p class="lead">Raw PHP implementation of apache lucene in 10 minutes.</p>
        </div>

        <form action="/" method="get">
            <div class="form-group">
                <label for="query-input">Query</label>
                <input type="text" class="form-control" name="q" id="query-input" value="">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Text</th>
                </tr>
            </thead>
            <tbody>
                {% for text in texts|default([]) %}
                    <tr>
                        <td>{{ text }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            {% if query|default() %}No Result found{% else %}No query provided{% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <form action="/" method="post">
            <div class="form-group">
                <label for="title-input">Text</label>
                <input type="text" class="form-control" name="text" id="text-input"/>
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
{% endblock %}
